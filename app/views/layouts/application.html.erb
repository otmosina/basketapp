<!DOCTYPE html>
<html>
<head>
  <title>Basketapp</title>



  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<div id="container">
  <div id="head_container"> 
    <div id="menu_nav">
        <%= link_to "На главную", root_path %> |
        <%= link_to "Админка товаров", admin_goods_path %> |
        <%= link_to "Товары", goods_path %>
    </div>

    <div id="user_nav">
      <% if current_user %>
        <%= current_user.username %> | <%= current_user.balance %> | 
        <div id="basket"><%= link_to "Корзина", basket_path %> </div> |
  		<%= link_to "Edit profile", edit_user_path(:current) %>  | 
        <%= link_to "Logout", logout_path %> 
      <% else %>
        <%= link_to "Register", new_user_path %> |
        <%= link_to "Login", login_path %>
      <% end %>
    </div>
    <div id="flash">
      <% flash.each do |name, msg|  %>
        <br/>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <br/>
      <% end %>


    </div>
  </div>
  <br/>
  <%= yield %>
<div>

</body>
</html>
