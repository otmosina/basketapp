<%= form_for @user do |f| %>
  <%#= f.error_messages %>
   <%= errors_for(@user, "Opps, unable to add new user").html_safe %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>  
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>  

  <p>
    <%= f.label :balance %><br />
    <%= f.text_field :balance %>
  </p>  

  <p><%= f.submit %></p>
<% end %>
